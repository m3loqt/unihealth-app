{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "appointments": {
      "$appointmentId": {
        ".read": "auth != null && (!root.child('doctors').child(auth.uid).exists() || root.child('doctors').child(auth.uid).child('status').val() != 'pending')",
        ".write": "auth != null && (!root.child('doctors').child(auth.uid).exists() || root.child('doctors').child(auth.uid).child('status').val() != 'pending')"
      }
    },
    "notifications": {
      "$userId": {
        ".indexOn": ["timestamp"],
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid"
      }
    },
    "clinics": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "doctors": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$doctorId": {
        ".read": "auth != null && (!data.exists() || data.child('status').val() != 'pending' || auth.uid == $doctorId)",
        ".write": "auth != null"
      }
    },
    "prescriptions": {
      "$prescriptionId": {
        ".read": "auth != null && (!root.child('doctors').child(auth.uid).exists() || root.child('doctors').child(auth.uid).child('status').val() != 'pending')",
        ".write": "auth != null && (!root.child('doctors').child(auth.uid).exists() || root.child('doctors').child(auth.uid).child('status').val() != 'pending')"
      }
    },
    "certificates": {
      "$certificateId": {
        ".read": "auth != null && (!root.child('doctors').child(auth.uid).exists() || root.child('doctors').child(auth.uid).child('status').val() != 'pending')",
        ".write": "auth != null && (!root.child('doctors').child(auth.uid).exists() || root.child('doctors').child(auth.uid).child('status').val() != 'pending')"
      }
    },
    "referrals": {
      "$referralId": {
        ".read": "auth != null && (!root.child('doctors').child(auth.uid).exists() || root.child('doctors').child(auth.uid).child('status').val() != 'pending')",
        ".write": "auth != null && (!root.child('doctors').child(auth.uid).exists() || root.child('doctors').child(auth.uid).child('status').val() != 'pending')"
      }
    },
    "medical_history": {
      "$recordId": {
        ".read": "auth != null && (!root.child('doctors').child(auth.uid).exists() || root.child('doctors').child(auth.uid).child('status').val() != 'pending')",
        ".write": "auth != null && (!root.child('doctors').child(auth.uid).exists() || root.child('doctors').child(auth.uid).child('status').val() != 'pending')"
      }
    }
  }
}
